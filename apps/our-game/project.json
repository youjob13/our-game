{
  "name": "our-game",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "generators": {
    "@schematics/angular:component": {
      "style": "scss"
    }
  },
  "sourceRoot": "apps/our-game/src",
  "prefix": "sml",
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "options": {
        "browser": "apps/our-game/src/main.ts",
        "tsConfig": "apps/our-game/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/our-game/public"
          },
          {
            "glob": "favicon.ico",
            "input": "public",
            "output": "."
          }
        ],
        "styles": ["apps/our-game/src/styles.scss"],
        "outputPath": "dist/our-game"
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kB",
              "maximumError": "1MB"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kB",
              "maximumError": "8kB"
            }
          ],
          "outputHashing": "all",
          "baseHref": "/our-game/"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production",
      "outputs": ["{options.outputPath}"]
    },
    "serve": {
      "executor": "@angular/build:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "our-game:build:production"
        },
        "development": {
          "buildTarget": "our-game:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "compile:no-emit": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit -p apps/our-game/tsconfig.app.json"
      }
    },
    "extract-i18n": {
      "executor": "@angular/build:extract-i18n"
    },
    "test": {
      "executor": "@angular/build:karma",
      "options": {
        "tsConfig": "tsconfig.spec.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "public"
          }
        ],
        "styles": ["src/styles.scss"]
      }
    },
    "test:coverage": {
      "executor": "@angular/build:karma",
      "options": {
        "tsConfig": "tsconfig.spec.json",
        "inlineStyleLanguage": "scss",
        "codeCoverage": true,
        "assets": [
          {
            "glob": "**/*",
            "input": "public"
          }
        ],
        "styles": ["src/styles.scss"]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["apps/our-game/**/*.ts", "apps/our-game/**/*.html"]
      }
    }
  }
}
