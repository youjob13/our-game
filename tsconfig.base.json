{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve",
    "paths": {
      "feature": ["libs/start-menu/feature/src/index.ts"],
      "@cutscene/domain": ["libs/cutscene/domain/src/index.ts"],
      "@cutscene/application": ["libs/cutscene/application/src/index.ts"],
      "@cutscene/infrastructure": ["libs/cutscene/infrastructure/src/index.ts"],
      "@cutscene/feature": ["libs/cutscene/feature/src/index.ts"],
      "@cutscene/ui": ["libs/cutscene/ui/src/index.ts"],
      "@customization/domain": ["libs/customization/domain/src/index.ts"],
      "@customization/application": ["libs/customization/application/src/index.ts"],
      "@customization/infrastructure": ["libs/customization/infrastructure/src/index.ts"],
      "@customization/ui": ["libs/customization/ui/src/index.ts"],
      "@customization/feature": ["libs/customization/feature/src/index.ts"]
    },
    "baseUrl": ".",
    "rootDir": "."
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true,
    "strictStandalone": true
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ],
  "exclude": ["node_modules", "tmp"]
}
