{
  "name": "our-game",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "nx serve our-game",
    "build": "nx run-many -t build",
    "compile:no-emit": "nx run-many -t compile:no-emit",
    "watch": "nx build our-game --watch --configuration development",
    "test": "nx run-many -t test",
    "lint": "nx run-many -t lint",
    "prepare": "husky",
    "pretty": "prettier --write \"**/*.ts\" \"**/*.html\""
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "20.3.13",
    "@angular/compiler": "20.3.13",
    "@angular/core": "20.3.13",
    "@angular/forms": "20.3.13",
    "@angular/platform-browser": "20.3.13",
    "@angular/router": "20.3.13",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular-devkit/core": "20.3.11",
    "@angular-devkit/schematics": "20.3.11",
    "@angular/build": "20.3.11",
    "@angular/cli": "20.3.11",
    "@angular/compiler-cli": "20.3.13",
    "@nx/angular": "22.1.1",
    "@nx/js": "22.1.1",
    "@nx/workspace": "22.1.1",
    "@schematics/angular": "20.3.11",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/jasmine": "~5.1.13",
    "@types/node": "20.19.9",
    "@typescript-eslint/utils": "^8.40.0",
    "angular-eslint": "20.6.0",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-change-detection-strategy": "^0.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jasmine-core": "~5.9.0",
    "jsdom": "~22.1.0",
    "jsonc-eslint-parser": "^2.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "~20.3.0",
    "nx": "22.1.1",
    "postcss": "^8.5.6",
    "postcss-url": "~10.1.3",
    "prettier": "3.6.2",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.46.3"
  }
}
